<h1>Ask Reggie Q & A</h1>
<h2>New post</h2>
<% form_for(@post) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :When %><br />
    <%= datetime_select("post", "created_at") %>
  </p>
  <p>
    <%= f.label :Question %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :Answer %><br />
    <%= f.text_area :response %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Back', posts_path %>
