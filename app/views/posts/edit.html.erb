<h1>Ask Reggie Q & A</h1>
<h2>Editing post</h2>
<% form_for(@post) do |f| %>
  <%= f.error_messages %>
  <%= f.datetime_select :created_at %>
  <p>
    <%= f.label :Question %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :DearWho? %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :response %><br />
    <%= f.text_area :response %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
